@model IEnumerable<Practical12.Models.Designation>
@{
    ViewData["Title"] = "Manage Designations";
}
@Html.ActionLink("Create New Designation", "Create", "Test2", new { @class = "btn btn-dark" })
@Html.ActionLink("Queries", "Queries", "Test3Designations", new { @class = "btn btn-outline-dark" })
@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DesignationName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="vertical-align:middle">
                        @Html.DisplayFor(modelItem => item.DesignationName)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", "Designation", new { id = item.Id }, new { @class = "btn btn-outline-dark" })
                        @Html.ActionLink("Edit", "Edit", "Designation", new { id = item.Id }, new { @class = "btn btn-outline-warning" })
                        @Html.ActionLink("Delete", "Delete", "Designation", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
